extends ../layout.jade

block head
  title Match

block css
  link(rel="stylesheet", href="/stylesheets/match.css")
  link(rel="stylesheet", href="/stylesheets/navbar.css")

block content
  include ../_navbar.jade

  
  div.match-wrapper
    if(error)
      p.error= error
    p.section-headline The Perfect Combi
    div.match
      .box 
        h2 Your Selections:
        h3=match.veggie
        h3=match.cheese
        h3=match.meat
        h3=match.dessert
    div.match.match-text
      | #{match.pairing}
      //- | #{match.about}
    div.match
      img.wine-img(src= match.image)
      p.wine-name= match.name
    form(action="/matches/#{match.id}" method="POST")
      button(type="submit") Save to favorites
  
  div.recipe-wrapper
    p.section-headline Need Some Inspiration?
    div.img-wrapper
      img(src="/images/recipe_placeholder_2.jpg")
    div.recipe
