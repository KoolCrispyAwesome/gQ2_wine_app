extends ../layout.jade

block head
  title Log In

block css
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
  link(rel="stylesheet", href="/stylesheets/login.css")
  link(rel="stylesheet", href="/stylesheets/navbar.css")

block content
  include ../_navbar.jade
  
  .wrapper
    if(error)
      p: small #{error}
    if(success)
      p: small #{success}

    .signup
      p.action Sign up
      form(action="/users" method="POST")
        label(for="user-photo") Profile Picture
        input(type="hidden" name="user[photo]" role="uploadcare-uploader")

        label(for="user-first-name") First Name
        input(type='text' name='user[first_name]' autofocus)

        label(for="user-last-name") Last Name
        input(type='text' name='user[last_name]')

        label(for="user-email") Email
        input(type='email' name='user[email]')

        label(for="user-password") Password
        input(type='password' name='user[password]')

        button(type='submit') Register

    .login
      p.action Login
      form(action="/auth/login" method="POST")
        label(for="user-email") Email
        input(type='email' name='user[email]')

        label(for="user-password") Password
        input(type='password' name='user[password]')

        button(type='submit') Login

      .fb-login
        a(href='/auth/facebook')
         button.fb-button
          i(class="fa fa-facebook-official" aria-hidden="true")
          | Log in with Facebook

block scripts
  include ../_uploadcare.jade